	<body>
		<div class="main">
			<div class="main__left">
				<div class="main__videos">
					<div id="video-grid"></div>
				</div>
				<div class="main__controls">
					<div class="control_blocks">
						<div
							onclick="muteUnmute()"
							class="control_buttons main__mute_button"
						>
							<i class="fas fa-microphone"></i>
							<span>Mute</span>
						</div>
						<div
							onclick="playStop()"
							class="control_buttons main__video_button"
						>
							<i class="fas fa-video"></i>
							<span>Stop Video</span>
						</div>
						<div class="control_buttons" onclick="hideBox()">
							<i class="fas fa-comment-alt"></i>
							<span>Chat</span>
						</div>
					</div>
					<div class="control_blocks">
						<div class="control_buttons">
							<span>Room Id :</span><span id="roomid"><%= roomId %></span>
						</div>
						<div class="control_buttons">
							<span id="cp_btn" class="copy_button" onclick="copy()">Copy RoomID</span>
						</div>
					</div>
					<div class="control_blocks">
						<div
							class="control_buttons"
							onclick="location.href = 'https://videowave-v.netlify.app/';"
						>
							<span class="leave_meeting">LEAVE</span>
						</div>
					</div>
				</div>
			</div>
			<div class="main__right">
				<div class="main__header">
					<h3>Chat</h3>
				</div>
				<div class="main__chat_window">
					<ul class="messages"></ul>
				</div>
				<div class="main__message_container">
					<input
						id="chat_message"
						type="text"
						placeholder="Type message here..."
					/>
				</div>
			</div>
		</div>
